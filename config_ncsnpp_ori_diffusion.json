{
    "name": "SDDM5_SDE_UNet",
    "n_gpu": 1,
    "sample_rate": 16000,
    "n_spec_frames": 256,
    "spec_transformer": {
        "type": "CSpecTransformer",
        "args": {
            "n_fft": 510,
            "hop_length": 128,
            "spec_factor":0.15,
            "spec_abs_exponent":0.5,
            "transform_type": "exponent"
        }
    },
    "arch": {
        "type": "SDDM",
        "args": {
            "noise_condition": "normalized_time_step",
            "q_transition": "original",
            "p_transition": "original"
        }
    },

    "diffusion": {
        "type": "GaussianDiffusion",
        "args": {
            "schedule": "linear",
            "n_timestep": 1000,
            "linear_start": 1e-6,
            "linear_end": 0.01
        }
    },
    "network": {
        "type": "NCSNpp",
        "args": {
        }
    },

    "tr_dataset": {
        "type": "CSpecDataset",
        "args":{
            "data_root": "data/Voicebank-DEMAND/train_28spk",
            "normalize": "noisy"
        }
    },
    "val_dataset": {
        "type": "AudioDataset",
        "args":{
            "data_root": "data/Voicebank-DEMAND/test",
            "datatype": ".wav"
        }
    },

    "infer_dataset": {
        "type": "AudioDataset",
        "args":{
            "data_root": "data/Voicebank-DEMAND/test",
            "datatype": ".wav"
        }
    },
    "tr_data_loader": {
        "type": "DataLoader",
        "args":{
            "batch_size": 2,
            "shuffle": true,
            "num_workers": 1
        }
    },
    "val_data_loader": {
        "type": "DataLoader",
        "args":{
            "batch_size": 1,
            "shuffle": true,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0002,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "l2_loss",
    "metrics": [
        "sisnr"
    ],
    "trainer": {
        "epochs": 1000,

        "save_dir": "saved/",
        "save_period": 1,
        "valid_period": 1,
        "verbosity": 2,
        "n_valid_data_batch": 1,
        "log_step": 10,
        
        "monitor": "min val_loss",
        "early_stop": -1,

        "tensorboard": true
    }
}
